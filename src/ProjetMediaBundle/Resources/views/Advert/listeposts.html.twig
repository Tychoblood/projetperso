{# src/ProjetMediaBundle/Resources/views/Advert/listeposts.html.twig #}

{% extends 'ProjetMediaBundle::base.html.twig' %}

		{% block title %}Page de listings des posts{% endblock %}
		  {% block greetings %}
			<h1>Bonjour <strong>{{ utilisateur.name }} </strong> </h1>	
		  {% endblock %}
{% block body %}
		<div class="btn-group" role="group" aria-label="...">
		  <a href="{{  url('urldebase') }}listingPosts?affichermenus=true" class="btn btn-default">Afficher uniquement les news avec menu</a>
		  <a href="{{  url('urldebase') }}listingPosts" class="btn btn-default">Afficher toutes les news</a>
		</div>
		
		<h2>Page IlotRegal</h2>({{ postsARecuperer }} derniers posts) 
		<ul class="list-group">
			{% if listeMessages is defined %}
				{% for messages in listeMessages %}
					<li class="wrapper list-group-item ">
						<em>{{ messages.message|e }}</em>
						{% if messages.menuduJour is defined %} 
							<div class="ribbon-wrapper-green"><div class="ribbon-green">Menu du jour</div>
						{% endif %}
					</li>
					{% if messages.platSpecifique is defined %}
						{%for message in messages.platSpecifique %}
							<div class="alert alert-info cache up-arrow" role="alert">
								Ce menu contient le plat <strong>{{ message }}	</strong>
							</div>
						{% endfor %}
					{% endif %}
				{% endfor %}
			{% endif%}
		</ul>
		
		<h2>Page Régal du circuit </h2>({{ postsARecuperer }} derniers posts : )
		<ul class="list-group">
			{% if listeMessages2 is defined %}
				{% for messages in listeMessages2 %}
					<li class="wrapper list-group-item ">
						<em>{{ messages.message|e }}</em>
						{% if messages.menuduJour is defined %} 
							<div class="ribbon-wrapper-green"><div class="ribbon-green">Menu du jour</div>
						{% endif %}
					</li>
					{% if messages.platSpecifique is defined %}
						{%for message in messages.platSpecifique %}
							<div class="alert alert-info cache up-arrow" role="alert">
								Ce menu contient le plat <strong>{{ message }}	</strong>
							</div>
						{% endfor %}
					{% endif %}
				{% endfor %}
			{% endif%}
		</ul>
		
		{% if logoutUrl is defined %}
			<br />
				 <a href="{{ logoutUrl }}" target="_blank" class="btn btn-block btn-social btn-facebook">
			  <span class="fa fa-facebook"></span>
			  Se déconnecter
			</a>
			</p>
		{% endif %}
{% endblock %}
{% block scriptFadeIn %}
	<script>
		$(document).ready(function() {
			$(".alert").delay(2500).fadeIn();
		});
	</script>
{% endblock%}


